[Desktop Entry]
Actions=h264;h265;vp9
MimeType=video/*
X-KDE-Priority=TopLevel
Name=ReVideo reencode professionaly service menu
ServiceTypes=KonqPopupMenu/Plugin,video/*,audio/*
TryExec=revideo-kdialog
Type=Service
X-KDE-Submenu=Reencode
X-KDE-Submenu[fr]=RÃ©encodage
Terminal=true
TerminalOptions=\s--noclose

################################################################################

[Desktop Action h264]
Exec=revideo-kdialog reencode_h264_hevc libx264 %F
Icon=video-x-wmv
Name=Convert to H264
Name[fr]=Convertir en H264

[Desktop Action h265]
Exec=revideo-kdialog reencode_h264_hevc libx265 %F
Icon=video-x-wmv
Name=Convert to HEVC
Name[fr]=Convertir en HEVC

[Desktop Action vp9]
Exec=revideo-kdialog reencode_vp9 libvpx-vp9 %F
Icon=video-webm
Name=Convert to VP9
Name[fr]=Convertir en VP9

